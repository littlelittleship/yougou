.footer .footer_right{
  flex: 60%;
  display: flex;
}
.join_cart,
.buy{
  flex:1;
  font-size: 16px;
  color:#fff;
  background: orange;
  text-align: center;
  line-height: 100rpx;
}
.buy{
  background: red;
}

.btn_contacr{
  position: absolute;
  width: 20%;
  left: 0;
  bottom:0;
  opacity: 0;
  z-index: 100;
}
