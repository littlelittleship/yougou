.search{
  background:#eee;
  padding:20px;

}
.search_content{
  background:#fff;
  border-radius: 4px;
  height:60rpx;
  color:#ff2ba4;
  /* line-height: 60rpx; */
  display: flex;
  align-items: center;
}
.search_content icon{
  margin:0 20rpx;
}

.tab{
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-around;
  border-bottom:1px solid #eee;
}
.active{
  color:#ff4a2b;
}

.product_list{
  padding:20rpx;
}
.pruduct_list_content{
  width:100%;
  display: flex;
  font-size: 14px;
  color:#333;
  padding:20rpx 20rpx 20rpx 0;
  border-bottom:1px solid #eee;
}
.product_list image{
  width:200rpx;
  height:200rpx;
  margin-right:20rpx;
}
.product_detail{
  flex:1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.product_detail .product_title{
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.product_price{
  color:#ff2ba4;
}
.product_price text{
  font-size: 20px;
}